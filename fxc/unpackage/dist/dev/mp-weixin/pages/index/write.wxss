.floating-button.data-v-9e8a410e {
	display: flex;
	justify-content: center;
	align-items: center;
	position: fixed;
	bottom: 10%;
	right: 20px;
	width: 45px;
	height: 45px;
	line-height: 60px;
	background-color: rgba(255, 255, 255, 0.7);
	/* 白色，透明度为 0.8 */
	
