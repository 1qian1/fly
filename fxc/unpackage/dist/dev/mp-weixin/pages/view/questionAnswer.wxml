<view class="container"><input class="search-input" placeholder="搜索问题或回答内容" data-event-opts="{{[['input',[['__set_model',['','searchText','$event',[]]]]]]}}" value="{{searchText}}" bindinput="__e"/><block wx:for="{{filteredQuestions}}" wx:for-item="item" wx:for-index="index" wx:key="index"><block wx:if="{{$root.g0>0}}"><view data-event-opts="{{[['tap',[['goToQuestionDetail',['$0'],[[['filteredQuestions','',index,'questionId']]]]]]]}}" class="question-item" bindtap="__e"><text class="question">{{item.questionContent}}</text><view class="info"><text>{{item.answerCount+" 回答 | "+item.userNickname}}</text><text class="user-nickname">{{item.questionDate}}</text></view></view></block><block wx:else><view><text>暂无匹配结果</text></view></block></block><button data-event-opts="{{[['tap',[['showPublishDialog',['$event']]]]]}}" class="publish-button" bindtap="__e">+</button><view hidden="{{!(showDialog)}}" class="dialog-mask"><view class="dialog-content"><textarea placeholder="在这里输入您的问题" data-event-opts="{{[['input',[['__set_model',['','newQuestionContent','$event',[]]]]]]}}" value="{{newQuestionContent}}" bindinput="__e"></textarea><view class="dialog-buttons"><view data-event-opts="{{[['tap',[['hidePublishDialog',['$event']]]]]}}" class="button" bindtap="__e">取消</view><view data-event-opts="{{[['tap',[['publishNewQuestion',['$event']]]]]}}" class="button confirm" bindtap="__e">发布</view></view></view></view><block wx:if="{{showSuccessMessage}}"><view class="success-message">发布成功</view></block><block wx:if="{{showNoResultMessage}}"><view class="no-result-message">暂无该问题</view></block></view>